    <persistence-unit name="PERSISTENCE-HSQLDB" transaction-type="RESOURCE_LOCAL">
        <description>Hibernate JPA Configuration Example HSQLDB</description>
        <class>com.nayakam.tutorial.hibernate.model.Person</class>
